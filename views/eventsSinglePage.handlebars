<div class="container">
    <div class="row">
        <h3>{{event.title}}</h3>
        <h5>Event Date: {{event.date_created}}</h5>
    </div>
    <div class="row">
        <div class="col s6">
            <p>Hosted by: {{event.user_id.name}}</p>
            <p>{{event.event_info}}</p>
        </div>
        <div class="col s6">
            <a class="waves-effect waves-light btn"><i class="material-icons right">add_circle</i>RSVP to Event</a>
            
            {{!-- possibly add a list of people already rsvp'd --}}
            <div class="rsvpList">
                <h6>RSVP List:</h6>
                {{!-- TODO figure out how to extract only rsvp list --}}
                {{!-- used chips under forms on materialize --}}
                {{#each users as |user|}}
                {{#if rsvp}}
                <div class="chip">
                {{!-- <img src={{user.img}} > --}}
                {{user.name}}
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <br>

    {{!-- if/else statement for different kind of buttons depending on if they are a creator of the event or user --}}
    <div class="row">
        {{!-- need to figure out correct term for creator --}}
        {{#if creator}}
        <div class="col s6">
            <a class="waves-effect waves-light btn"><i class="material-icons right">build</i>Edit Event</a>
        </div>
        <div class="col s6">
            <a class="waves-effect waves-light btn"><i class="material-icons right">delete</i>Delete Event</a>
        </div>
        {{else}}
        <div class="col s6">
            <a class="waves-effect waves-light btn"><i class="material-icons right">send</i>Share Event</a>
        </div>
        <div class="col s6">
            <a class="waves-effect waves-light btn"><i class="material-icons right">remove_circle</i>Leave Event</a>
        </div>
        {{/if}}
    </div>
</div>





