<div class="container">
    <div class="row">
        {{!-- loop over each event --}}
        {{#each events as |event|}}
        <div class="row">
            <div class="col s8">
                <h2>
                    <a href="/event/{{event.id}}">{{event.title}}</a>
                </h2>
                <p>Date of event: {{event.date_created}}</p>
                <p>Hosted by: {{event.user_id.name}}</p>
            </div>
            <div class="col s4">
                <a class="waves-effect waves-light btn"><i class="material-icons right">add_circle</i>RSVP to Event</a>
                <a class="waves-effect waves-light btn"><i class="material-icons right">send</i>Share with Friends</a>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="row">
        <div class="center-align">
            <a class="waves-effect waves-light btn-large">Create an Event</a>
        </div>
    </div>
</div>

